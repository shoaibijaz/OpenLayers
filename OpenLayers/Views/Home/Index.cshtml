    ViewBag.Title = "Home Page";
}

<div id="map" class="map"></div>


@section scripts{
    <script type="text/javascript">
        (function ($) {

            $.fn.geoMap = function (options) {

                var selector = $(this).attr('id');

                var settings = $.extend({
                    center: ol.proj.transform([-1.81185, 52.44314], 'EPSG:4326', 'EPSG:3857'),
                    zoom: 4
                }, options);

                var drawFeatureLayer = new ol.source.Vector({});

                var tileLayer = new ol.layer.Tile({ source: new ol.source.OSM() });

                var map = new ol.Map({
                    layers: [tileLayer],
                    target: selector,
                    view: new ol.View({
                        center: settings.center,
                        zoom: settings.zoom
                    })
                });

            };

        }(jQuery));

     
        $(function () {
            $("#map").geoMap();
        });

    </script>
}